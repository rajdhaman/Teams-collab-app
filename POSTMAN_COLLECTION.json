        {
          "name": "Get All Projects",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/projects",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "Create Project (Admin/Manager)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Q4 Planning 2025\",\n  \"description\": \"Strategic initiatives for Q4\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/projects",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "Get Project Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/projects/{{projectId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        },
        {
          "name": "Update Project (Admin/Manager)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"archived\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/projects/{{projectId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        },
        {
          "name": "Delete Project (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/projects/{{projectId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get All Tasks (by Project)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/tasks?projectId={{projectId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks"],
              "query": [
                {
                  "key": "projectId",
                  "value": "{{projectId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Design homepage UI\",\n  \"description\": \"Create mockups and prototypes for the new homepage\",\n  \"priority\": \"HIGH\",\n  \"dueDate\": \"2025-12-31\",\n  \"assignedTo\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/tasks?projectId={{projectId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks"],
              "query": [
                {
                  "key": "projectId",
                  "value": "{{projectId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Task Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Update Task Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Update Task (Mark Done)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"DONE\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Reassign Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assignedTo\": \"{{newUserId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages (Chat)",
      "item": [
        {
          "name": "Get Team Chat Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/messages?limit=50&skip=0",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "skip",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great progress on the homepage design! Let's schedule a review meeting.\",\n  \"messageType\": \"TEXT\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/messages",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages"]
            }
          }
        },
        {
          "name": "Mark Message as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/messages/{{messageId}}/read",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages", "{{messageId}}", "read"]
            }
          }
        },
        {
          "name": "Delete Message",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{idToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/messages/{{messageId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages", "{{messageId}}"]
            }
          }
        }
      ]
    },
